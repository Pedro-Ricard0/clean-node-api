{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Construindo API REST com NODE.JS utilizando, Clean Architecture e Design Patterns.",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node ./main/index.js",
    "test": "jest --watchAll --silent --colors --noStackTrace --passWithNoTests ",
    "test:unit": "npm test -- --watchAll -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.3.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "mongodb-memory-server": "^10.1.4",
    "standard": "^17.1.2",
    "supertest": "^7.1.1",
    "test": "^3.3.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.14.3",
    "validator": "^13.15.15"
  }
}
